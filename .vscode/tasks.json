{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "rojo build default.project.json -o build.rbxlx"
    },
    {
      "label": "Serve",
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "command": "rojo serve default.project.json"
    }
  ]
}